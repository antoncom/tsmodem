
config gpio 'general'
	option debug '0'
	option isActive '1'

config gpio 'IO0'
	option status 'enable'
	option debounce_ms '100'
	option action_command 'touch IOO_detected'
	option hw_info 'usb-cp2112'
	option direction 'IN'
	option trigger 'RISE'
	option value 'LOW'
	option action_type 'command'

config gpio 'IO1'
	option status 'enable'
	option debounce_ms '100'
	option action_command 'touch IO1_detected'
	option hw_info 'usb-cp2112'
	option direction 'IN'
	option trigger 'RISE'
	option value 'LOW'
	option action_type 'none'

config gpio 'IO2'
	option status 'disable'
	option debounce_ms '100'
	option action_command 'echo "IO2 detected"'
	option hw_info 'usb-cp2112'
	option action_type 'command'
	option direction 'IN'
	option trigger 'RISE'
	option value 'LOW'

config gpio 'IO3'
	option status 'disable'
	option action_command 'echo "IO3 detected"'
	option hw_info 'usb-cp2112'
	option debounce_ms '200'
	option direction 'OUT'
	option value 'HIGH'
	option action_type 'command'
	option trigger 'BOTH'

