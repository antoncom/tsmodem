
config gpio 'general'
	option debug '0'
	option isActive 'true'
  #option isActive '1'

config gpio 'IO0'
	option status 'enable'
	option direction 'out'
	option value '1'		
	option trigger 'rising'
	option debounce_ms '100'
	option action_command 'touch IOO_detected'
	option hw_info 'usb-cp2112'
  #option direction 'IN'
  #option trigger 'RISE'
  #option value 'LOW'
  #option action_type 'command'

